            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="375.0" prefWidth="513.0">
                     <children>
                        <TableView fx:id="tvEndereco" layoutY="132.0" onMouseClicked="#selecionarEndereco" prefHeight="159.0" prefWidth="513.0">
